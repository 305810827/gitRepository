            <!--<td>{{item.phone}}</td>-->
            <!--<td>{{item.birthday}}</td>-->
            <!--<td>{{item.sex}}</td>-->
            <!--<td>{{item.address}}</td>-->

            <td>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#infoModal"
                        data-whatever="{{index}}">
                    编辑
                </button>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#dangerModal"
                        data-whatever="{{index}}">
                    删除
                </button>
            </td>
            <td>
                <input type="checkbox" value="{{index}}" name="del">
            </td>
        </tr>
        {{/each}}
