    $('#infoModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        if (recipient == null) {
            userIndex = -1;
            modal.find('.modal-body input#id').val(0);
            modal.find('.modal-body input#name').val("");
            modal.find('.modal-body input#password').val("");
            modal.find('.modal-body input#username').val("");
            modal.find('.modal-body input#phone').val("");
            modal.find('.modal-body input#birthday').val("");
            modal.find('.modal-body input#sex').val("");
            modal.find('.modal-body input#address').val("");
        }
        else {
            userIndex = recipient;
            var user = users[userIndex];
            modal.find('.modal-body input#id').val(user.id);
            modal.find('.modal-body input#name').val(user.name);
            modal.find('.modal-body input#password').val(user.password);
            modal.find('.modal-body input#username').val(user.username);
            modal.find('.modal-body input#phone').val(user.phone);
            modal.find('.modal-body input#birthday').val(user.birthday);
            modal.find('.modal-body input#sex').val(user.sex);
            modal.find('.modal-body input#address').val(user.address);
        }
    })

    $('#dangerModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)

        var user = users[recipient]
        modal.find('.modal-body input#id1').val(user.id);
        modal.find('.modal-body td#name1').text(user.name)
        modal.find('.modal-body td#password1').text(user.password)
        modal.find('.modal-body td#username1').text(user.username);
        modal.find('.modal-body td#phone1').text(user.phone);
        modal.find('.modal-body td#birthday1').text(user.birthday);
        modal.find('.modal-body td#sex1').text(user.sex);
        modal.find('.modal-body td#address1').text(user.address);
    })

    $("#save").click(function () {
