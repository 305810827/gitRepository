                  <br />
                  <hr />
                  <br />
                  <br />
                  <br />
                  <br />
                  <% } %>
                  <nav>
                  <ul class="pagination">
                  <% if(pageBean.pageNum ==1 && pageBean.pageNum !=  pageBean.totalPage) { %>
                  <li class="page-item"><a class="page-link">上一页</a></li>
                  <% for(var i=pageBean.start ; i<=pageBean.end ; i++) { %>
                  <% if(pageBean.pageNum == i) { %>
                  <li class="page-item"><a class="page-link" >${i}</a></li>
                  <% } %>
                  <% if(pageBean.pageNum != i) { %>
                  <li class="page-item"><a class="page-link" href="/course?pageNum=${i}">${i}</a></li>
                  <% } %>
                  <% } %>
                  <li class="page-item"><a class="page-link" href="/course?pageNum=${pageBean.pageNum+1}">下一页</a></li>
                  <% } %>

                  <% if(pageBean.pageNum >1 && pageBean.pageNum < pageBean.totalPage ) { %>
                  <li class="page-item"><a class="page-link" href="/course?pageNum=${pageBean.pageNum-1}" >上一页</a></li>
                  <% for(var i=pageBean.start ; i<=pageBean.end ; i++ ) { %>
