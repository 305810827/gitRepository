                  <% for(course in courses){ %>
                  <table class="table table-responsive-sm table-bordered table-striped table-sm">
                    <thead>
                    <tr>
                      <th>ID</th>
                      <th>课程名</th>
                      <th>讲师</th>
                      <th>难度</th>
                      <th>描述</th>
                      <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                      <td>${course.id}</td>
                      <td>${course.course_name}</td>
                      <td>${course.lecturer}</td>
                      <td>${course.difficulty}</td>
                      <td>${course.describe1}</td>
                      <td>
                        <a type="button" class="btn btn-info" data-toggle="modal" data-target="#infoModal" data-whatever="${course.id}">
                          编辑
                        </a>
                        <a type="button" class="btn btn-danger" onclick="return confirm('确认删除该课程吗？')" href='/course/delete?course_id=${course.id}'>
                          删除
                        </a>
                      </td>
                    </tr>
                    </tbody>
                  </table>
